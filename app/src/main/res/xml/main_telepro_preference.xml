<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:asp="http://schemas.android.com/apk/res-auto">

    <SeekBarPreference
        android:key="seek_bar_key_hovered"
        android:title="Hovered TelePro Text Speed"
        android:defaultValue="@integer/seek_bar_default"
        android:max="@integer/seek_bar_max"
        asp:min="@integer/seek_bar_min"/>

    <SeekBarPreference
        android:key="seek_bar_key"
        android:title="Main TelePro Text Speed"
        android:defaultValue="@integer/seek_bar_default"
        android:max="@integer/seek_bar_max"
        asp:min="@integer/seek_bar_min" />
</PreferenceScreen>