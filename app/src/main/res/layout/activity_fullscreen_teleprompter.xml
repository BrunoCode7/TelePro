<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:example="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:keepScreenOn="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/telepro_scroll"
    tools:context=".FullscreenTeleprompter"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:scrollbars="none">

<android.lib.widget.verticalmarqueetextview.VerticalMarqueeTextView
    android:id="@+id/telepro_textview_fs"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:layout_gravity="center_horizontal"
    example:marqueeSpeed="25"
    example:textSize="20dp"
    example:textColor="@android:color/black"
    example:textStyle="bold" />

</LinearLayout>